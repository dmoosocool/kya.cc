.article-wapper
  width 700px
  margin 0 auto
  h2
    margin-top 50px
    font-size 30px
    color #333
    line-height 1.3
    position relative
    font-weight bold
  .describe
    margin-top 20px
    font-size 13px
    color #666
    span 
      display inline-block
      margin-right 20px
      em
        font-style normal
  .content
    font-size 14px
    line-height 2
    color #333
    p
      padding 15px 0
    &:before
      content ''
      height 1px 
      width 100px
      background-color #eee
      display block
      margin 30px auto 40px
#comment
  margin 40px 0
.relevant-wapper
  background-color #fafafa
  padding 50px 0
  .relevant
    width 700px
    margin 0 auto
    .relevant-header
      font-size 12px
      position relative
      padding-bottom 10px
      border-bottom 1px solid #ddd
      color #333
      em
        font-style normal
        text-indent 10px
        letter-spacing 3px
        font-size 13px
      span
        position absolute
        right 0
      a
        text-decoration none
        color #666
        font-size 13px
        margin-left 14px
        display inline-block
  ul.relevant-list
    li
      list-style-type none
      padding 25px 0 32px
      border-bottom 1px solid #e8e8e8
      div
        display inline-block
      .article-left
        width 70%
        margin-right 2%
        vertical-align top
        a
          font-size 22px
          color #333
          line-height 1.3
          text-decoration none
        p
          font-size 14px
          color #666
          line-height 1.8
          margin-top 10px
      .article-right
        width 27%
        img 
          width 100%
          object-fit cover